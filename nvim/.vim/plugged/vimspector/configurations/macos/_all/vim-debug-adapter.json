{
  "configurations": {
    "Launch Python": {
      "adapter": "debugpy",
      "filetypes": [
        "python"
      ],
      "configuration": {
        "request": "launch",
        "program": "${file}",
        "args": [
          "${positional_args}"
        ],
        "cwd": "${workspaceRoot}",
        "stopOnEntry": true
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    },
    "Attach Python": {
      "description": "run script with python3 -m debugpy --listen localhost:5678 --wait-for-client file.py, then set breakpoint in file before launching vimspector",
      "adapter": "multi-session",
      "filetypes": [
        "python"
      ],
      "configuration": {
        "request": "attach",
        "host": "${host:localhost}",
        "port#json": "${port:5678}"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    },
    "Launch C++": {
      "adapter": "CodeLLDB",
      "filetypes": [
        "cpp",
        "c"
      ],
      "configuration": {
        "request": "launch",
        "program": "${executable_name}",
        "args": [
          "${positional_args}"
        ],
        "stopOnEntry": true,
        "externalConsole": true,
        "MIMode": "lldb"
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "",
          "cpp_catch": ""
        }
      }
    },
    "Attach C++": {
      "adapter": "CodeLLDB",
      "filetypes": [
        "cpp",
        "c"
      ],
      "configuration": {
        "request": "attach",
        "program": "${executable_name}",
        "stopOnEntry": true,
        "MIMode": "lldb"
      },
      "breakpoints": {
        "exception": {
          "cpp_throw": "",
          "cpp_catch": ""
        }
      }
    },
    "Launch Java": {
      "description": "compile with javac -g before launching",
      "adapter": "vscode-java",
      "filetypes": [
        "java"
      ],
      "configuration": {
        "request": "launch",
        "mainClass": "${mainClass}",
        "sourcePaths": [
          "${workspaceRoot}/"
        ],
        "classPaths": [
          "${workspaceRoot}/"
        ],
        "stopOnEntry": true,
        "console": "integratedTerminal"
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "caught": "",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    },
    "Attach Java": {
      "description": "compile with javac -g, run with java -Xdebug -Xrunjdwp:transport=dt_socket,server=y,suspend=y,address=5678 MyClass, then set breakpoint before launching vimspector",
      "adapter": "vscode-java",
      "filetypes": [
        "java"
      ],
      "configuration": {
        "request": "attach",
        "hostName": "${host:localhost}",
        "port": "${port:5678}",
        "sourcePaths": [
          "${workspaceRoot}/"
        ],
        "classPaths": [
          "${workspaceRoot}/"
        ]
      },
      "breakpoints": {
        "exception": {
          "raised": "N",
          "caught": "",
          "uncaught": "",
          "userUnhandled": ""
        }
      }
    }
  }
}
